<ul class="wiki_page_actions">
  <%= content_tag('li', link_to( wt( I18n.t("irwi.new") ), wiki_page_history_path(@page) )) if edit_allowed? %>
  <%= content_tag('li', link_to( wt( I18n.t("irwi.edit") ), wiki_page_edit_path(@page) )) if edit_allowed? %>
  <%= content_tag('li', link_to( wt( I18n.t("irwi.delete") ), wiki_page_path(@page), :method => :delete, :confirm => wt( "Destroyed page can't be restored. Are you sure?" ) )) if destroy_allowed? %>
</ul>
<div style='clear:both' />
